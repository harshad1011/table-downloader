{
    "manifest_version": 2,
    "name": "Simple Excel Downloader",
    "description": "This extension helps downloading HTML tables in excel format",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/excel-download.png"
    },
    "icons": {
        "128": "icons/excel_download-128.png",
        "48": "icons/excel_download-48.png",
        "16": "icons/excel-download.png"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "downloads",
        "tabs",
        "*://*/*"
    ]
}